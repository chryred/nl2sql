# =============================================================================
# NL2SQL MCP Server Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# MCP Server Configuration
# =============================================================================

# Transport mode: stdio (default) or sse
MCP_TRANSPORT=sse

# SSE server port (only used when MCP_TRANSPORT=sse)
MCP_PORT=3001

# Bearer authentication token for SSE mode (recommended for production)
# Generate with: openssl rand -hex 32
MCP_AUTH_TOKEN=your-secure-token-here

# =============================================================================
# AI Configuration
# =============================================================================

# AI provider: openai or anthropic
NL2SQL_AI_PROVIDER=openai

# OpenAI API Key (required if using openai provider)
OPENAI_API_KEY=sk-...

# Anthropic API Key (required if using anthropic provider)
ANTHROPIC_API_KEY=sk-ant-...

# Model override (optional)
# NL2SQL_MODEL=gpt-4o-mini

# =============================================================================
# Database Configuration
# =============================================================================

# Database type: postgresql, mysql, or oracle
DB_TYPE=postgresql

# Database host
# - For Docker: use host.docker.internal to access host machine's localhost
# - For production: use actual database hostname
DB_HOST=localhost

# Database port (default: 5432 for PostgreSQL, 3306 for MySQL, 1521 for Oracle)
DB_PORT=5432

# Database credentials
DB_USER=postgres
DB_PASSWORD=password

# Database name
DB_NAME=mydb

# Oracle service name (optional, only for Oracle)
# DB_SERVICE_NAME=ORCL

# Oracle charset conversion (for US7ASCII databases storing Korean/CJK data)
# Supported: ms949, euc-kr, euc-jp, shift_jis, gb2312, gbk, big5, etc.
# ORACLE_DATA_CHARSET=ms949

# Oracle client mode: auto (default), thick, thin
# auto: tries Thick mode, falls back to Thin if Oracle Instant Client unavailable
# thick: requires Oracle Instant Client (error if unavailable)
# thin: pure JS mode (Korean/CJK charset conversion will not work)
# ORACLE_CLIENT_MODE=auto

# Oracle Instant Client library path (for Thick mode)
# ORACLE_CLIENT_PATH=/opt/oracle/instantclient

# =============================================================================
# Node Environment
# =============================================================================

# Node environment (development, production)
NODE_ENV=production
